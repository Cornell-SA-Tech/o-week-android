<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/hourText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_hour"
		android:textSize="@dimen/size_hour"
		tools:text="11 AM"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_time_line"
		android:alpha="@dimen/alpha_time_line"
		android:background="@android:color/black"
		android:layout_marginLeft="@dimen/margin_left_time_line"
		android:layout_marginRight="@dimen/margin_hour"
		android:layout_gravity="center_vertical"/>
</FrameLayout>