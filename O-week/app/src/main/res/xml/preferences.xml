<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
		android:title="@string/settings_category_notifications">
		<ListPreference
			android:key="@string/key_receive_reminders"
			android:title="@string/settings_receive_reminders"
			android:summary="%s"
			android:entries="@array/settings_receive_reminders_titles"
			android:entryValues="@array/settings_receive_reminders_titles"
			android:defaultValue="@string/receive_reminders_all_events"
			android:positiveButtonText="@null"/>
		<ListPreference
			android:key="@string/key_notify_me"
			android:title="@string/settings_notify_me"
			android:summary="%s"
			android:entries="@array/settings_notify_me_titles"
			android:entryValues="@array/settings_notify_me_titles"
			android:defaultValue="@string/notify_me_2_hours"
			android:positiveButtonText="@null"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/settings_category_events">
		<Preference
			android:key="@string/settings_add_required_events"
			android:title="@string/settings_add_required_events"/>
		<Preference
			android:key="@string/settings_remove_events"
			android:title="@string/settings_remove_events"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/settings_category_resources">
		<Preference
			android:key="@string/settings_orientation_pamphlet"
			android:title="@string/settings_orientation_pamphlet"/>
		<Preference
			android:key="@string/settings_campus_map"
			android:title="@string/settings_campus_map"/>
		<Preference
			android:key="@string/settings_new_students_webpage"
			android:title="@string/settings_new_students_webpage"/>
		<Preference
			android:key="@string/settings_cornell_rescuer"
		    android:title="@string/settings_cornell_rescuer"/>
	</PreferenceCategory>
</PreferenceScreen>
